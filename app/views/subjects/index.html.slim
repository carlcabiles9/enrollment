p#notice = notice

h1.p-3.mb-2.bg-info.text-white Subjects

table.table-bordered
  thead
    tr
      th Name
      th Description
      th Code
      
  tbody
     -@subjects.each do |subject| 
      tr
        td = subject.name 
        td = subject.description 
        td = subject.code 
        td.li = link_to 'Show', subject 
        td.li = link_to 'Edit', edit_subject_path(subject) 
        td.li = link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } 
     
<br>

= link_to 'New Subject', new_subject_path 
