<p id="notice"><%= notice %></p>

<div class="p-3 mb-2 bg-info text-white"><h1>Students</h1></div>

<center><table class="table table-bordered">
  <thead>
    <tr>
      <th> Last name</th>
      <th> First name</th>
      <th> Course</th>
      <th> Age</th>
      <th> Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead> 

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.course %></td>
        <td><%= student.age %></td>
        <td><%= student.birthday %></td>
        <td><li><%= link_to 'Show', student %><br>
        <li><%= link_to 'Edit', edit_student_path(student) %><br>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'delete student', deletestudent_path(id: student.id) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<i class="fab fa-acquisitions-incorporated"></i>
<%= link_to 'New Student', new_student_path %>
